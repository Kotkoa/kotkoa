{
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[git-commit]": {
    "editor.rulers": [50, 72]
  },
  "css.lint.unknownAtRules": "ignore",
  "css.validate": true,
  "debug.inlineValues": "on",
  "diffEditor.ignoreTrimWhitespace": true,
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Fira Code, Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.guides.bracketPairs": "active",
  "editor.indentSize": "tabSize",
  "editor.inlineSuggest.enabled": true,
  "editor.language.colorizedBracketPairs": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"]
  ],
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.parameterHints.enabled": true,
  "editor.pasteAs.preferences": ["text.updateImports"],
  "editor.quickSuggestions": {
    "comments": "on",
    "other": "on",
    "strings": "on"
  },
  "editor.smoothScrolling": true,
  "editor.snippetSuggestions": "none",
  "editor.suggestSelection": "recentlyUsed",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "emmet.triggerExpansionOnTab": true,
  "eslint.format.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "graphql", "astro"],
  "explorer.autoRevealExclude": {
    "**/node_modules": true
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.cts": "${capture}.typegen.ts",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.mts": "${capture}.typegen.ts",
    "*.ts": "${capture}.js, ${capture}.typegen.ts",
    "*.tsx": "${capture}.ts, ${capture}.typegen.ts",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "tsconfig.json": "tsconfig.*.json"
  },
  "files.associations": {
    ".graphqlconfig": "graphql",
    "*.gql": "graphql",
    "*.graphql": "graphql"
  },
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/.git": false
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "formattingToggle.statusBarText": {
    "formattingDisabled": "Off $(heart)",
    "formattingEnabled": "On $(heart-filled)"
  },
  "git.autofetch": "all",
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreRebaseWarning": true,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "[chore|feat|style|refactor|test]: use a short, use conventional format commit message description (6-8 key words, max 10 words) with no ending period"
    }
  ],
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": true,
    "scminput": false,
    "yaml": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "githubPullRequests.fileListLayout": "flat",
  "githubPullRequests.pullBranch": "never",
  "gitlens.advanced.similarityThreshold": 5,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.pullRequests.enabled": false,
  "gitlens.graph.minimap.enabled": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.hovers.enabled": true,
  "gitlens.statusBar.enabled": false,
  "gitlens.views.fileHistory.avatars": false,
  "gitlens.views.repositories.branches.layout": "list",
  "gitlens.views.scm.grouped.default": "branches",
  "gitlens.views.scm.grouped.views": {
    "branches": true,
    "commits": true,
    "contributors": true,
    "launchpad": false,
    "remotes": true,
    "repositories": true,
    "searchAndCompare": false,
    "stashes": true,
    "tags": true,
    "worktrees": true
  },
  "gitlens.views.stashes.files.layout": "list",
  "javascript.format.enable": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "javascript.preferences.quoteStyle": "single",
  "javascript.suggest.paths": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": true,
  "js/ts.implicitProjectConfig.checkJs": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "markdown.preview.fontSize": 14,
  "npm.packageManager": "yarn",
  "php.validate.executablePath": "/opt/homebrew/bin/php",
  "prettier.documentSelectors": ["**/*.astro"],
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.env.osx": {},
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 1000000,
  "todo-tree.tree.showCountsInTree": true,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.implementationsCodeLens.enabled": true, // show implementations
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false, // show return types
  "typescript.inlayHints.parameterTypes.enabled": false, // show parameter types
  "typescript.referencesCodeLens.enabled": true, // show references
  "typescript.suggest.autoImports": true, // show auto imports
  "typescript.suggest.completeJSDocs": true,
  "typescript.suggest.paths": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnPaste.enabled": true,
  "typescript.validate.enable": true,
  "update.mode": "start",
  "vscode-graphql.rejectUnauthorized": false,
  "vsicons.dontShowNewVersionMessage": true,
  "window.autoDetectColorScheme": true,
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#e6ac00",
    "editorBracketHighlight.foreground2": "#e6b800",
    "editorBracketHighlight.foreground3": "#e6c400",
    "editorBracketHighlight.foreground4": "#e6d000",
    "editorBracketHighlight.foreground5": "#e6dc00",
    "editorBracketHighlight.foreground6": "#e6e800",
    "editorBracketHighlight.unexpectedBracket.foreground": "#cf4545",
    "editorBracketPairGuide.background1": "#ffc64d",
    "editorBracketPairGuide.background2": "#ffce67",
    "editorBracketPairGuide.background3": "#ffd680",
    "editorBracketPairGuide.background4": "#ffde99",
    "editorBracketPairGuide.background5": "#ffe6b3",
    "editorBracketPairGuide.background6": "#ffefcc"
  },
  "workbench.colorTheme": "One Monokai (Light)",
  "workbench.editor.customLabels.patterns": {
    "**/app/**/layout.tsx": "/${dirname} - layout.tsx",
    "**/app/**/page.tsx": "/${dirname} - page.tsx",
    "**/i18n/**/en.json": "${dirname} - en.json"
  },
  "workbench.preferredDarkColorTheme": "One Monokai",
  "workbench.preferredHighContrastLightColorTheme": "One Monokai",
  "workbench.preferredLightColorTheme": "One Monokai",
  "editor.wordWrap": "wordWrapColumn",
  "workbench.iconTheme": "vscode-icons",
  "workbench.externalBrowser": "chrome"
}
